<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main class="message">
    <body class="bg-light">
        <%= locals. username%>
        <main role="main" class="container">
            <table class="table">
                <th>Sender</th>
                <th>Receiver</th>
                <th>Message</th>
                <% chat.forEach(message => { %>
                    <tr>
                        <td><%= message.sender_username%></td>
                        <td><%= message.receiver_username%></td>
                        <td><%= message.message_text%></td>
                    </tr>
                <% }) %>
            </table>
        </main>
        <form action="/message/<%= locals.username %>" method="POST">
            <label for="messageTextBox" class="form-label">Send Message</label>
            <input type="textbox" id="messageTextBox" class="form-control" placeholder="Send message to <%= locals.username %>">
            <button type="submit" class="btn btn-outline-primary" name = "message">Send</button>
        </form>
    </body>
</main>

<%- include ('../partials/footer') %>